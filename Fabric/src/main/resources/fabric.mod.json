{
    "schemaVersion": 1,
    "id": "jmi",
    "version": "${version}",
  
    "name": "JourneyMapIntegration",
    "description": "The mod that adds mod integration for JourneyMap.",
    "authors": [
      "frankV"
    ],
    "contact": {
      "homepage": "https://www.curseforge.com/minecraft/mc-mods/journeymap-integration",
      "sources": "https://github.com/frank89722/JourneyMapIntegration"
    },
  
    "license": "MIT",
    "icon": "assets/modid/logo.png",
  
    "environment": "*",
    "entrypoints": {
      "client": [
        "frankv.jmi.JMIFabric"
      ],
      "journeymap": [
        "frankv.jmi.JMIJourneyMapPlugin"
      ]
    },
    "mixins": [
      "jmi.mixins.json"
    ],
  
    "depends": {
      "fabricloader": ">=0.14",
      "fabric": "*",
      "minecraft": "1.19.x",
      "java": ">=17",
      "journeymap": "*"
